 <included>
    <appender name="SLACK" class="com.github.maricn.logback.SlackAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy:MM:dd HH:mm:ss.SSS} %-5level --- [%thread] %logger{35} : %msg %n</pattern>
        </layout>
        <webhookUri>https://hooks.slack.com/services/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</webhookUri>
        <username>monitor-dev</username>
        <channel>monitor-dev</channel>
        <iconEmoji>:bell:</iconEmoji>
        <colorCoding>true</colorCoding>
    </appender> <!-- Currently recommended way of using Slack appender -->

    <appender name="ASYNC-SLACK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SLACK"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>
</included>
